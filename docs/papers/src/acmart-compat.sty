% ACM Template Compatibility Layer
% Provides basic ACM-style formatting using standard LaTeX article class
% Used when acmart.cls is not available

\ProvidesPackage{acmart-compat}[2025/07/17 ACM Template Compatibility]

% Page layout similar to ACM format
\RequirePackage[letterpaper,margin=0.75in,top=1in,bottom=1in]{geometry}
\RequirePackage{amsmath,amsfonts,amssymb}
\RequirePackage{graphicx}
\RequirePackage{url}
\RequirePackage{hyperref}

% Two-column layout
\RequirePackage{multicol}

% ACM-style title formatting
\RequirePackage{titling}

% Define ACM-like commands
\newcommand{\email}[1]{\texttt{#1}}
\newcommand{\affiliation}[1]{}
\newcommand{\institution}[1]{#1}
\newcommand{\country}[1]{}
\newcommand{\shortauthors}[1]{}

% CCS concepts (simplified)
\newenvironment{CCSXML}{\comment}{\endcomment}
\newcommand{\ccsdesc}[2][]{}

% Keywords (simplified)
\newcommand{\keywords}[1]{\paragraph{Keywords:} #1}

% Set copyright (do nothing)
\newcommand{\setcopyright}[1]{}
\newcommand{\settopmatter}[1]{}

% Make title ACM-style
\pretitle{\begin{center}\LARGE\bfseries}
\posttitle{\par\end{center}\vskip 0.5em}

\preauthor{\begin{center}\large}
\postauthor{\end{center}}

\predate{\begin{center}\large}
\postdate{\par\end{center}\vskip 1em}

% Abstract formatting
\renewenvironment{abstract}%
{\quotation\small\noindent{\bfseries Abstract:}\space}%
{\endquotation}

% Section formatting (smaller than article default)
\RequirePackage{titlesec}
\titleformat{\section}{\normalfont\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalfont\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalfont\normalsize\itshape}{\thesubsubsection}{1em}{}

% Spacing adjustments
\setlength{\parindent}{0pt}
\setlength{\parskip}{0.5em}

% Comment command for CCSXML
\long\def\comment#1{}